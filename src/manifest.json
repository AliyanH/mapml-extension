{
  "name": "MapML Extension",
  "version": "0.1",
  "description": "An extension for the mapml-viewer",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "geolocation",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "https://maps4html.org/*"
    ],
    "js": [
      "content.js"
    ]
  }]
}