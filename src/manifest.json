{
  "name": "MapML Extension",
  "version": "0.1",
  "description": "An extension for the mapml-viewer",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "geolocation",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/maps4html16.png",
    "32": "icons/maps4html32.png",
    "48": "icons/maps4html48.png",
    "96": "icons/maps4html96.png",
    "128": "icons/maps4html128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "https://maps4html.org/*"
    ],
    "js": [
      "content.js"
    ]
  }]
}